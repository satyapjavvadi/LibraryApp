@model LibraryApp.Account

@{
    ViewData["Title"] = "CheckoutBooks";
}

<h2>CheckoutBooks</h2>

<h4>Account</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="CheckoutBooks">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="AccountNumber" />
            <div class="form-group">
                <label class="control-label">Books to be check out:</label>
                <input name="BookCount" class="form-control" />
            </div> 
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
